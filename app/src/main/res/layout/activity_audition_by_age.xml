<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AuditionByAge"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/santa_img"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/backstage_icon"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl2"
        android:layout_marginTop="-25dp">

        <ImageView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/tag_line"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/red"/>


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/ageNo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="88dp"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="35dp"
            android:layout_below="@id/text1" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:text="For         Year\n\nOld Girl"
            android:textSize="22dp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="35dp"/>


        <ImageView
            android:id="@+id/age_img1"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@id/text1"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="40dp" />

        <ImageView
            android:id="@+id/superwomen_girl"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_below="@id/text1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="-30dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="40dp"/>

        <ImageView
            android:id="@+id/age_img4"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_below="@id/text1"
            android:layout_marginTop="420dp"
            android:layout_marginLeft="95dp" />

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/register_now"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@id/bottom_nav_view"
        android:orientation="horizontal"
        android:background="@drawable/btn_bg"
        android:layout_margin="5dp">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/alert_gif"
            android:layout_toEndOf="@id/register_now"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="-5dp"
            android:layout_gravity="center"
            android:layout_above="@id/bottom_nav_view"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Now"
            android:textSize="11dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="8dp"
            android:textColor="@color/white"
            android:layout_above="@id/bottom_nav_view" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_profile"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@id/bottom_nav_view"
        android:orientation="horizontal"
        android:background="@drawable/btn_bg"
        android:layout_margin="5dp"
        android:layout_toEndOf="@id/register_now">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/message_gif"
            android:layout_toEndOf="@id/register_now"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="-5dp"
            android:layout_gravity="center"
            android:layout_above="@id/bottom_nav_view"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Portfolio"
            android:textSize="11dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="8dp"
            android:textColor="@color/white"
            android:layout_above="@id/bottom_nav_view" />

    </LinearLayout>

 <pl.droidsonroids.gif.GifImageView
         android:id="@+id/live_chat"
         android:layout_width="72dp"
         android:layout_height="30dp"
         android:src="@drawable/live_chat"
         android:layout_marginBottom="5dp"
        android:layout_above="@id/bottom_nav_view"
        android:layout_alignParentRight="true"/>

     <pl.droidsonroids.gif.GifImageView
        android:id="@+id/fab"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginRight="-15dp"
        android:layout_above="@id/bottom_nav_view"
        android:layout_marginBottom="-12dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/chatbot_gif"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav_view" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/purple_700"
        android:layout_alignParentBottom="true"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:menu="@menu/bottom_menu" />



</RelativeLayout>